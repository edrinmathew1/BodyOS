{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Backend (Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "backend.main:app",
        "--reload",
        "--host", "127.0.0.1",
        "--port", "8000"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Run Frontend (Flet)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/frontend/app.py",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
  "compounds": [
    {
      "name": "Run BodyOS (Frontend + Backend)",
      "configurations": [
        "Run Backend (Uvicorn)",
        "Run Frontend (Flet)"
      ]
    }
  ]
}
