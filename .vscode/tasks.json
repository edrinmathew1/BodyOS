{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Backend",
      "type": "process",
      "command": "uvicorn",
      "args": [
        "backend.main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "group": "build",
      "problemMatcher": []
    },

    {
      "label": "Run Frontend",
      "type": "process",
      "command": "python",
      "args": [
        "frontend/app.py"
      ],
      "group": "build",
      "problemMatcher": []
    },

    {
      "label": "Run Both",
      "dependsOn": ["Run Backend", "Run Frontend"],
      "dependsOrder": "parallel"
    }
  ]
}
